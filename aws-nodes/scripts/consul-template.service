[Unit]
Description=Consul
Documentation=https://www.consul.io/

[Service]
ExecStart=sudo /usr/local/bin/consul-template -template "/home/ubuntu/refer-arch-aws/aws-nodes/scripts/nginx.conf.ctmpl:/etc/nginx/nginx.conf:sudo nginx -s reload" -config /home/ubuntu/refer-arch-aws/aws-nodes/scripts/consul-template.config
ExecReload=/bin/kill -HUP $MAINPID
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target

